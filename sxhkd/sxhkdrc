##---------- Keybindings for bspwm ----------##

# Terminal (kitty)
super + Return
    kitty

# Terminal (fullscreen)
super + t
    alacritty -s    

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + shift + Return
    rofi -theme karulosu -show drun
    #rofi -show drun

##---------- Applications ----------##

# Launch Apps
super + shift + {d}
    {dolphin}

# Brave

super + b
    brave

# Farge
super + shift + f
    farge --expire-time 10000  --notify

##---------- System Keys ----------##

# Take a screenshot
Print
    maim -s -u | tee ~/Pictures/Screenshots/$(date +%s).png | xclip -selection clipboard -t image/png

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
    bspc node -c

# Reload Keybindings
super + Escape
    pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}
    
# Split horizontal, vertical or cancel
super + {h,v,q}
    bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Fullscreen or Monocle
super + f
#   bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
    bspc desktop -f {prev.local,next.local}

# Focus or send to the given desktop
super + {_,shift + }{0-9}
    bspc {desktop -f, node -d} {0-9}

# Move desktop to next monitor

super + shift + bracket{left,right}
    D=$(bspc query -D -d); \
    M=$(bspc query -M -m {prev,next}); \
    bspc desktop -m $M; \
    bspc query -m $M -T | jshon -e desktops -a -e name -u | sort -n | xargs bspc monitor $M -o; \
    bspc desktop -f $D

# Focus next monitor

super + bracket{left,right}
    bspc monitor -f {west,east}

# Switch to last opened workspace
super + {Tab,grave}
    bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{0-9}
    bspc {desktop -f,node -d} '{0-9}'

# Expanding windows
super + control + {Left,Right,Up,Down}
    bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
    
# Shrinking windows
super + alt + {Left,Right,Up,Down}
    bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
    
# Move floating windows
alt + shift + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
    winmask     

# Increase bright

super + F11
    xbacklight -inc 10

super + F10
    xbacklight -dec 10
